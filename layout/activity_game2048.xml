<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game2048">

    <Button
        android:id="@+id/game2048RestartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="Restart2048Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <ImageView
        android:id="@+id/game2048grid"
        android:layout_width="375dp"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".57"
        app:srcCompat="@drawable/game_background_2048_sub_head" />

    <ImageView
        android:id="@+id/game2048Head"
        android:layout_width="355dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".1"
        app:srcCompat="@drawable/game_background_2048_head" />

    <TableLayout
        android:id="@+id/game2048TableLayout"
        android:layout_width="360dp"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="620dp">


            <TextView
                android:id="@+id/game2048a1"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048b1"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048c1"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048d1"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/game2048a2"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048b2"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048c2"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048d2"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/game2048a3"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048b3"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048c3"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048d3"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/game2048a4"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048b4"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048c4"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game2048d4"
                android:layout_width="83.5dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="@string/defaultOperation"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/game2048Score"
        android:layout_width="60dp"
        android:layout_height="19dp"
        android:layout_marginBottom="16dp"
        android:text="@string/zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

</androidx.constraintlayout.widget.ConstraintLayout>